{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "InstaPlate Recipe Manager",
  "version": "0.1.0",
  "identifier": "com.instaplate.recipe-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "InstaPlate Recipe Manager",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
"csp": "default-src 'self' asset:; connect-src 'self' https:; img-src 'self' asset: https: data:; style-src 'self' 'unsafe-inline';"
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:recipes.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.svg"
    ]
  }
}
